Bootstrap: docker
From: ubuntu:22.04

%post
    apt-get update && apt-get install -y build-essential git python3 python3-pip libhdf5-dev
    python3 -m pip install --upgrade pip
    pip install -r /work/requirements.txt

%files
    ./scripts /work/scripts
    ./tools /work/tools
    ./params /work/params
    ./examples /work/examples

%environment
    export PATH=/work/scripts:$PATH
